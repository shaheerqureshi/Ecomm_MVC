@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create new Category</a>
        </div>

    </div>

<table class="table table-bordered table-striped my-5">
    <thead>
    <tr>
        <th>Category Name</th>
        <th>Display Order</th>
    </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
                        <button class="btn btn-primary mx-3"><i class="bi bi-pencil-square"></i> Edit</button>
                        <button class="btn btn-danger mx-3"><i class="bi bi-trash3"></i> Delete</button>
            </td>
            
        </tr>
        }
    </tbody>
</table>
</div>